<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_beer_list_container"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="6dip"
    tools:ignore="UselessParent"
    tools:targetApi="m">

    <ImageView
        android:id="@+id/beer_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dip"
        android:layout_marginTop="6dip"
        android:layout_marginRight="16dip"
        android:layout_marginBottom="6dip"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_beer_list_alcohol_by_volume"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="6dip"
        android:layout_marginRight="6dip"
        android:ellipsize="marquee"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/beer_img" />

    <TextView
        android:id="@+id/txt_beer_list_tagline"
        android:layout_width="0dip"
        android:layout_height="26dip"
        android:layout_marginLeft="16dip"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/beer_img"
        app:layout_constraintTop_toBottomOf="@id/txt_beer_name_list" />

    <TextView
        android:id="@+id/txt_beer_name_list"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="16dip"
        android:gravity="center_vertical"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/txt_beer_list_tagline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/beer_img"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

